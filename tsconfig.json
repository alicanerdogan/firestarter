{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esNext",
    "moduleResolution": "node",
    "target": "es2015",
    "jsx": "react",
    "lib": [
      "es2015",
      "dom"
    ],
    "types": [
      "node"
    ],
    "strictNullChecks": true,
    "strictPropertyInitialization": true
  },
  "include": [
    "./src/**/*"
  ]
}